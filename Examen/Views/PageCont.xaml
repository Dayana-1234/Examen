<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.Views.PageCont">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=" INGRESAR"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtnombres" Placeholder=" Nombres" Keyboard="Text" />

            <Entry x:Name="txtapellidos" Placeholder="Apellidos" Keyboard="Text" />

            <Entry x:Name="txtedad" Placeholder="Edad" Keyboard="Numeric" />

            <Entry x:Name="txtpais" Placeholder="Pais" Keyboard="Text" />

            <Entry x:Name="txtnota" Placeholder="Nota" Keyboard="Text" />

            <Button x:Name="btnagregar" Text="Agregar" Clicked="btnagregar_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>